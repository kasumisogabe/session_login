<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>投稿内容</th>
    <th>投稿者</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= link_to "詳細を確認する", blog_path(blog.id) %></td>
    <td><%= link_to "投稿を編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to "投稿を削除する", blog_path(blog.id), method: :delete, data: {confirm: "本当に削除していいですか?"} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しく投稿する', new_blog_path %>